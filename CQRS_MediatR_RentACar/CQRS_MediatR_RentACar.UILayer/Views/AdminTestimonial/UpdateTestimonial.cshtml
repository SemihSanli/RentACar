@model GetTestimonialByIdResult
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h5 mb-0">Referans Güncelle</h1>
        <a class="btn btn-outline-secondary" href="/AdminTestimonial/Index/">
            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="row">
        <!-- Form Alanı -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-action="UpdateTestimonial" asp-controller="AdminTestimonial" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TestimonialID" />

                        <div class="mb-3">
                            <label class="form-label">Referans Adı</label>
                            <input asp-for="TestimonialName" class="form-control" placeholder="Örn. Ahmet Yılmaz" required />
                            <span class="text-danger" asp-validation-for="TestimonialName"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Referans Unvanı</label>
                            <input asp-for="TestimonialTitle" class="form-control" placeholder="Örn. CEO, CTO" required />
                            <span class="text-danger" asp-validation-for="TestimonialTitle"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Puan / Derecelendirme</label>
                            <input asp-for="TestimonialReviewScore" class="form-control" placeholder="Örn. 5/5" required />
                            <span class="text-danger" asp-validation-for="TestimonialReviewScore"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yorum / Açıklama</label>
                            <textarea asp-for="TestimonialComment" class="form-control" rows="5" placeholder="Referans yorumunu yazınız..." required></textarea>
                            <span class="text-danger" asp-validation-for="TestimonialComment"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Referans Resim URL</label>
                            <input asp-for="TestimonialImageURL" id="testimonialImageUrl" class="form-control" placeholder="https://..." />
                            <span class="text-danger" asp-validation-for="TestimonialImageURL"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                            <a href="/AdminTestimonial/Index/" class="btn btn-light">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Resim Önizleme -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Resim Önizleme</strong>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="rounded-circle overflow-hidden border bg-light" style="width:120px;height:120px;">
                        <img id="testimonialImagePreview" src="@Model.TestimonialImageURL" alt="Referans Resmi" style="width:100%;height:100%;object-fit:cover;display:@(string.IsNullOrEmpty(Model.TestimonialImageURL) ? "none" : "block");" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const urlInput = document.getElementById('testimonialImageUrl');
            const img = document.getElementById('testimonialImagePreview');
            if(!urlInput) return;

            function update(){
                const v = (urlInput.value || '').trim();
                if(!v){ img.style.display='none'; img.removeAttribute('src'); return; }
                img.src = v;
                img.onload = () => { img.style.display='block'; };
                img.onerror = () => { img.style.display='none'; };
            }
            urlInput.addEventListener('input', update);
            update();
        })();
    </script>
}


