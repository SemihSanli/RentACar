@model List<GetContactQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container-fluid px-4 py-3">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h1 class="h4 mb-0">İletişim Bilgileri</h1>
		<a class="btn btn-primary" href="/AdminContact/AddContact/">
			<i class="fas fa-plus me-2"></i>Yeni Ekle
		</a>
	</div>

	@if (Model == null || !Model.Any())
	{
		<div class="alert alert-info">Kayıt bulunamadı.</div>
	}
	else
	{
		<div class="card shadow-sm">
			<div class="card-body">
				<div class="table-responsive">
					<table class="table table-hover align-middle">
						<thead class="table-light">
							<tr>
								<th style="width:80px;">ID</th>
								<th>Adres</th>
								<th>E-Posta</th>
								<th>Telefon</th>
								<th>Web Sitesi</th>
								<th style="width:180px;">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.ContactID</td>
									<td>@item.Address</td>
									<td>@item.MailUs</td>
									<td>@item.Phone</td>
									<td>
										@if (!string.IsNullOrWhiteSpace(item.Webside))
										{
											<a href="@item.Webside" target="_blank" rel="noopener">@item.Webside</a>
										}
									</td>
									<td>
										<div class="btn-group btn-group-sm" role="group">
											<a class="btn btn-outline-primary" href="/AdminContact/UpdateContact/@item.ContactID">
												<i class="fas fa-edit me-1"></i>Güncelle
											</a>
											<a class="btn btn-outline-danger"
											   href="/AdminContact/DeleteContact/@item.ContactID"
											   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
												<i class="fas fa-trash me-1"></i>Sil
											</a>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	}
	<style>
		body {
			background: radial-gradient(1000px 700px at 10% 0%, rgba(75,63,149,.10), transparent 60%), radial-gradient(900px 600px at 100% 20%, rgba(106,89,200,.10), transparent 60%), linear-gradient(180deg, #E7DFEE 0%, #C5D6E6 50%, #79B1D3 100%);
			color: #0F172A;
			min-height: 100vh;
		}

	</style>
</div>


