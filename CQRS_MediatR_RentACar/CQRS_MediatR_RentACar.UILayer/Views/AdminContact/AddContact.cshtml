
@model CreateContactCommand
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "İletişim Ekle";
}

<div class="container-fluid px-4 py-4">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h1 class="h5 mb-0">Yeni İletişim Kaydı</h1>
		<a class="btn btn-outline-secondary" href="@Url.Action("Index","AdminContact")">
			<i class="fas fa-arrow-left me-2"></i>Listeye Dön
		</a>
	</div>

	<div class="card shadow-sm">
		<div class="card-body">
			<form asp-action="AddContact" asp-controller="AdminContact" method="post" novalidate>
				

				<div class="mb-3">
					<label class="form-label">Adres</label>
					<textarea asp-for="Address" class="form-control" rows="3" placeholder="Adres bilgisi" required></textarea>
					<span class="text-danger" asp-validation-for="Address"></span>
				</div>

				<div class="row g-3">
					<div class="col-md-6">
						<label class="form-label">E-Posta</label>
						<input asp-for="MailUs" type="email" class="form-control" placeholder="ornek@site.com" required />
						<span class="text-danger" asp-validation-for="MailUs"></span>
					</div>
					<div class="col-md-6">
						<label class="form-label">Telefon</label>
						<input asp-for="Phone" class="form-control" placeholder="+90 5xx xxx xx xx" required />
						<span class="text-danger" asp-validation-for="Phone"></span>
					</div>
				</div>

				<div class="mt-3">
					<label class="form-label">Web Sitesi</label>
					<input asp-for="Webside" type="url" class="form-control" placeholder="https://ornek.com" />
					<span class="text-danger" asp-validation-for="Webside"></span>
				</div>

				<hr class="my-4" />

				<div class="d-flex gap-2">
					<button type="submit" class="btn btn-primary">
						<i class="fas fa-save me-2"></i>Kaydet
					</button>
					<a href="@Url.Action("Index","AdminContact")" class="btn btn-light">İptal</a>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}