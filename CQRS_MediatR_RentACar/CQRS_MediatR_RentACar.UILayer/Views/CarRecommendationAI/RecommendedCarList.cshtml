@model List<CQRS_MediatR_RentACar.BusinessLayer.CQRS_MediatR.Results.CarRecommendationAIResults.GetCarRecommendationAIQueryResult>
@{
    ViewData["Title"] = "AI Araç Önerileri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --bg-top: #E7DFEE; /* üst arka plan */
        --bg-mid: #C5D6E6; /* orta arka plan */
        --bg-bot: #79B1D3; /* alt arka plan */
        --ink: #0F172A; /* birincil metin */
        --ink-2: #475569; /* ikincil metin */
        --line: #E2E8F0; /* ayıraç/çizgi */
        --violet: #4B3F95; /* ikon/vurgu moru */
        --violet-2: #6A59C8; /* açık mor */
        --pink: #FF4FAE; /* rozet/CTA pembe */
        --glass: rgba(255,255,255,.55);
        --glass-2: rgba(255,255,255,.30);
        --shadow: 0 16px 60px rgba(16,24,40,.15);
    }

    /* Sayfa arka planı + kılavuz çizgiler */
    .ai-viewport {
        min-height: 100vh;
        background: radial-gradient(1000px 700px at 10% 0%, rgba(75,63,149,.10), transparent 60%), radial-gradient(900px 600px at 100% 20%, rgba(106,89,200,.10), transparent 60%), linear-gradient(180deg, var(--bg-top) 0%, var(--bg-mid) 50%, var(--bg-bot) 100%);
        color: var(--ink);
        position: relative;
        overflow-x: hidden;
        isolation: isolate;
    }

    .grid-lines {
        position: absolute;
        inset: 0;
        pointer-events: none;
        opacity: .06;
        z-index: 0;
        background-image: linear-gradient(var(--line) 1px, transparent 1px), linear-gradient(90deg, var(--line) 1px, transparent 1px);
        background-size: 56px 56px, 56px 56px;
        mask-image: radial-gradient(1200px 900px at 50% 20%, #000, transparent);
    }

    /* Başlık */
    .ai-header {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 56px 0 20px;
    }

    .ai-title {
        font-weight: 900;
        letter-spacing: .6px;
        margin: 0;
        font-size: clamp(28px,3.8vw,48px);
        background: linear-gradient(90deg, var(--violet), var(--violet-2), var(--pink));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        text-shadow: 0 8px 40px rgba(75,63,149,.35);
    }

    .ai-sub {
        color: var(--ink-2);
        margin-top: 8px;
    }

    /* Takma sekmeler */
    .ai-toolbar {
        position: sticky;
        top: 0;
        z-index: 3;
        padding: 12px 0;
        backdrop-filter: blur(8px);
        background: linear-gradient(180deg, var(--glass), var(--glass-2));
        border-top: 1px solid rgba(255,255,255,.35);
        border-bottom: 1px solid rgba(255,255,255,.25);
    }

    .pill {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 10px 16px;
        border-radius: 999px;
        text-decoration: none;
        color: #fff;
        background: linear-gradient(90deg, var(--violet), var(--violet-2));
        border: 1px solid rgba(255,255,255,.35);
        box-shadow: 0 10px 22px rgba(75,63,149,.25);
        transition: transform .2s ease, box-shadow .2s ease, opacity .2s ease;
    }

        .pill:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 30px rgba(106,89,200,.30);
        }

    /* Tam sayfa içerik akışı */
    .ai-stream {
        position: relative;
        z-index: 1;
        width: min(1320px, 94%);
        margin: 0 auto;
        padding: 28px 0 96px;
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin: 28px 0;
    }

    .stat-card {
        background: linear-gradient(180deg, var(--glass), var(--glass-2));
        backdrop-filter: blur(6px);
        border: 1px solid rgba(255,255,255,.45);
        border-radius: 20px;
        padding: 28px;
        text-align: center;
        box-shadow: var(--shadow);
        transition: transform .3s ease, box-shadow .3s ease;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 24px 48px rgba(16,24,40,.20);
        }

        .stat-card:nth-child(1) {
            background: linear-gradient(135deg, var(--violet), var(--violet-2));
            color: white;
        }

        .stat-card:nth-child(2) {
            background: linear-gradient(135deg, var(--pink), #f093fb);
            color: white;
        }

        .stat-card:nth-child(3) {
            background: linear-gradient(135deg, var(--violet-2), #4facfe);
            color: white;
        }

    .stat-icon {
        font-size: 2.5rem;
        margin-bottom: 16px;
        opacity: 0.9;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 900;
        margin-bottom: 8px;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
        font-weight: 600;
    }

    /* Öneri kartları */
    .recommendation-card {
        background: linear-gradient(180deg, var(--glass), var(--glass-2));
        backdrop-filter: blur(6px);
        border: 1px solid rgba(255,255,255,.45);
        border-radius: 20px;
        margin: 28px 0;
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: transform .3s ease, box-shadow .3s ease;
    }

        .recommendation-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 24px 60px rgba(16,24,40,.25);
        }

    .card-header-custom {
        background: linear-gradient(90deg, var(--violet), var(--violet-2));
        color: white;
        padding: 24px 28px;
        border-bottom: 1px solid rgba(255,255,255,.25);
    }

    .card-header-title {
        font-weight: 800;
        font-size: 1.1rem;
        margin: 0;
    }

    .date-badge {
        background: rgba(255,255,255,.25);
        color: white;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        border: 1px solid rgba(255,255,255,.35);
    }

    .card-body-custom {
        padding: 28px;
    }

    /* Müşteri talebi */
    .customer-prompt {
        margin-bottom: 28px;
    }

    .prompt-label {
        color: var(--violet);
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .prompt-content {
        background: rgba(255,255,255,.6);
        border: 1px solid rgba(255,255,255,.4);
        border-radius: 12px;
        padding: 20px;
        font-style: italic;
        color: var(--ink);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    /* AI yanıtları - YENİ SİSTEMATİK YAPI */
    .ai-responses-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 24px;
    }

    .ai-response-card {
        background: rgba(255,255,255,.8);
        border-radius: 16px;
        padding: 0;
        border: 1px solid rgba(255,255,255,.6);
        transition: all .3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(16,24,40,.08);
    }

        .ai-response-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--violet), var(--violet-2));
        }

        .ai-response-card:nth-child(2)::before {
            background: linear-gradient(90deg, var(--pink), #f093fb);
        }

        .ai-response-card:nth-child(3)::before {
            background: linear-gradient(90deg, var(--violet-2), #4facfe);
        }

        .ai-response-card:hover {
            background: rgba(255,255,255,.95);
            transform: translateY(-4px);
            box-shadow: 0 16px 32px rgba(16,24,40,.15);
        }

    /* AI Header */
    .ai-response-header {
        background: linear-gradient(135deg, rgba(75,63,149,.08), rgba(106,89,200,.08));
        padding: 20px 24px 16px;
        border-bottom: 1px solid rgba(255,255,255,.4);
    }

    .ai-response-card:nth-child(2) .ai-response-header {
        background: linear-gradient(135deg, rgba(255,79,174,.08), rgba(240,147,251,.08));
    }

    .ai-response-card:nth-child(3) .ai-response-header {
        background: linear-gradient(135deg, rgba(106,89,200,.08), rgba(79,172,254,.08));
    }

    .ai-avatar {
        width: 52px;
        height: 52px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        margin-bottom: 12px;
        background: linear-gradient(135deg, var(--violet), var(--violet-2));
        color: white;
        box-shadow: 0 8px 20px rgba(75,63,149,.25);
    }

    .ai-response-card:nth-child(2) .ai-avatar {
        background: linear-gradient(135deg, var(--pink), #f093fb);
    }

    .ai-response-card:nth-child(3) .ai-avatar {
        background: linear-gradient(135deg, var(--violet-2), #4facfe);
    }

    .ai-expert-title {
        font-weight: 800;
        color: var(--violet);
        margin-bottom: 4px;
        font-size: 1.1rem;
        letter-spacing: 0.3px;
    }

    .ai-response-card:nth-child(2) .ai-expert-title {
        color: var(--pink);
    }

    .ai-response-card:nth-child(3) .ai-expert-title {
        color: var(--violet-2);
    }

    .ai-expert-subtitle {
        color: var(--ink-2);
        font-size: 0.85rem;
        font-weight: 500;
        opacity: 0.8;
    }

    /* AI Content - SİSTEMATİK YAPI */
    .ai-response-content {
        padding: 20px 24px 24px;
    }

    .ai-response-text {
        color: var(--ink);
        line-height: 1.7;
        font-size: 0.9rem;
        margin: 0;
        white-space: pre-line;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Özellik listesi */
    .features-list {
        list-style: none;
        padding: 0;
        margin: 16px 0 0;
    }

        .features-list li {
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 8px 0;
            border-bottom: 1px solid rgba(255,255,255,.3);
        }

            .features-list li:last-child {
                border-bottom: none;
            }

    .feature-icon {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--violet), var(--violet-2));
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        color: white;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .ai-response-card:nth-child(2) .feature-icon {
        background: linear-gradient(135deg, var(--pink), #f093fb);
    }

    .ai-response-card:nth-child(3) .feature-icon {
        background: linear-gradient(135deg, var(--violet-2), #4facfe);
    }

    .feature-text {
        color: var(--ink);
        font-size: 0.85rem;
        line-height: 1.5;
        flex: 1;
    }

    /* Öneri özeti */
    .recommendation-summary {
        background: rgba(255,255,255,.4);
        border-radius: 8px;
        padding: 16px;
        margin-top: 16px;
        border-left: 3px solid var(--violet);
    }

    .ai-response-card:nth-child(2) .recommendation-summary {
        border-left-color: var(--pink);
    }

    .ai-response-card:nth-child(3) .recommendation-summary {
        border-left-color: var(--violet-2);
    }

    .summary-title {
        font-weight: 700;
        color: var(--violet);
        font-size: 0.85rem;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .ai-response-card:nth-child(2) .summary-title {
        color: var(--pink);
    }

    .ai-response-card:nth-child(3) .summary-title {
        color: var(--violet-2);
    }

    .summary-text {
        color: var(--ink);
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        font-weight: 500;
    }

    /* Boş durum */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        color: var(--ink-2);
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 24px;
        opacity: 0.6;
        color: var(--violet);
    }

    .empty-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: var(--ink);
    }

    .empty-description {
        margin-bottom: 32px;
        line-height: 1.6;
    }

    .btn-primary-custom {
        background: linear-gradient(90deg, var(--violet), var(--violet-2));
        border: none;
        color: white;
        padding: 16px 32px;
        border-radius: 999px;
        font-weight: 700;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 12px 24px rgba(75,63,149,.25);
        transition: transform .2s ease, box-shadow .2s ease;
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 16px 32px rgba(106,89,200,.30);
            color: white;
            text-decoration: none;
        }

    /* Breadcrumb */
    .breadcrumb-custom {
        background: rgba(255,255,255,.6);
        border-radius: 12px;
        padding: 16px 24px;
        margin-bottom: 28px;
        border: 1px solid rgba(255,255,255,.4);
    }

    .breadcrumb-item a {
        color: var(--violet);
        text-decoration: none;
        font-weight: 600;
    }

        .breadcrumb-item a:hover {
            color: var(--violet-2);
        }

    .breadcrumb-item.active {
        color: var(--ink-2);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .ai-title

    {
        font-size: 2rem;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .ai-responses-grid {
        grid-template-columns: 1fr;
    }

    .card-body-custom {
        padding: 20px;
    }

    .ai-response-header,
    .ai-response-content {
        padding: 16px 20px;
    }

    }
</style>

<div class="ai-viewport">
    <div class="grid-lines"></div>

    <div class="ai-header">
        <h1 class="ai-title">🤖 AI Araç Önerileri</h1>
        <div class="ai-sub">Yapay zeka tarafından hazırlanan kişiselleştirilmiş araç önerileri</div>
    </div>

    <div class="ai-toolbar">
        <div class="toolbar-inner">
            <a class="pill" href="@Url.Action("Index", "CarRecommendationAI")">
                <i class="fa fa-plus"></i> Yeni Öneri
            </a>
        </div>
    </div>

    <div class="ai-stream">
        <!-- Breadcrumb -->
        <nav class="breadcrumb-custom">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "CarRecommendationAI")">🏠 Ana Sayfa</a>
                </li>
                <li class="breadcrumb-item active">�� AI Önerileri</li>
            </ol>
        </nav>

        @if (!Model.Any())
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <h3 class="empty-title">Henüz öneri bulunmuyor</h3>
                <p class="empty-description">İlk araç önerinizi almak için ana sayfaya gidin ve bir soru sorun!</p>
                <a href="@Url.Action("Index", "CarRecommendationAI")" class="btn-primary-custom">
                    🚗 İlk Önerimi Al
                </a>
            </div>
        }
        else
        {
            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">🤖</div>
                    <div class="stat-number">@Model.Count</div>
                    <div class="stat-label">Toplam Öneri</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">💡</div>
                    <div class="stat-number">@(Model.Count * 3)</div>
                    <div class="stat-label">Toplam Cevap</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">⏰</div>
                    <div class="stat-number">@Model.Max(x => x.ResponseDate).ToString("dd/MM")</div>
                    <div class="stat-label">Son Güncelleme</div>
                </div>
            </div>

            <!-- Recommendations List -->
            @foreach (var recommendation in Model.OrderByDescending(x => x.ResponseDate))
            {
                <div class="recommendation-card">
                    <div class="card-header-custom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-header-title">
                                <i class="fa fa-user-circle me-2"></i>
                                Müşteri Talebi #@recommendation.CarRecommendationAIID
                            </h5>
                            <span class="date-badge">
                                <i class="fa fa-calendar-alt me-1"></i>
                                @recommendation.ResponseDate.ToString("dd MMM yyyy, HH:mm")
                            </span>
                        </div>
                    </div>

                    <div class="card-body-custom">
                        <!-- Customer Prompt -->
                        <div class="customer-prompt">
                            <div class="prompt-label">
                                <i class="fa fa-question-circle"></i>
                                Müşteri Talebi:
                            </div>
                            <div class="prompt-content">
                                "@recommendation.CustomerPrompt"
                            </div>
                        </div>

                        <!-- AI Responses - SİSTEMATİK YAPI -->
                        <div class="ai-responses-grid">
                            <!-- Pratik Uzman -->
                            <div class="ai-response-card">
                                <div class="ai-response-header">
                                    <div class="ai-avatar">
                                        <i class="fas fa-car"></i>
                                    </div>
                                    <h6 class="ai-expert-title">Pratik Uzman</h6>
                                    <div class="ai-expert-subtitle">Bütçe dostu öneriler</div>
                                </div>
                                <div class="ai-response-content">
                                    <p class="ai-response-text">@recommendation.AIResponse1</p>

                                    <!-- Özellik listesi (opsiyonel) -->
                                    <div class="recommendation-summary">
                                        <div class="summary-title">🎯 Ana Öneri</div>
                                        <p class="summary-text">Bütçe dostu, pratik ve günlük kullanıma uygun araç seçenekleri</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Lüks Uzman -->
                            <div class="ai-response-card">
                                <div class="ai-response-header">
                                    <div class="ai-avatar">
                                        <i class="fas fa-crown"></i>
                                    </div>
                                    <h6 class="ai-expert-title">Lüks Uzman</h6>
                                    <div class="ai-expert-subtitle">Premium deneyim</div>
                                </div>
                                <div class="ai-response-content">
                                    <p class="ai-response-text">@recommendation.AIResponse2</p>

                                    <div class="recommendation-summary">
                                        <div class="summary-title">⭐ Premium Özellikler</div>
                                        <p class="summary-text">Lüks, konfor ve sürüş deneyimini ön planda tutan seçenekler</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Güvenlik Uzman -->
                            <div class="ai-response-card">
                                <div class="ai-response-header">
                                    <div class="ai-avatar">
                                        <i class="fas fa-shield-alt"></i>
                                    </div>
                                    <h6 class="ai-expert-title">Güvenlik Uzman</h6>
                                    <div class="ai-expert-subtitle">Güvenlik & konfor</div>
                                </div>
                                <div class="ai-response-content">
                                    <p class="ai-response-text">@recommendation.AIResponse3</p>

                                    <div class="recommendation-summary">
                                        <div class="summary-title">��️ Güvenlik Odaklı</div>
                                        <p class="summary-text">En yüksek güvenlik standartları ve konfor özellikleri</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>