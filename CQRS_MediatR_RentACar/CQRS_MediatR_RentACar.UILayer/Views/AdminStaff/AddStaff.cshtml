@model CreateStaffCommand
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h5 mb-0">Yeni Personel</h1>
        <a class="btn btn-outline-secondary" href="/AdminStaff/Index/">
            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="row">
        <!-- Form Alanı -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-action="AddStaff" asp-controller="AdminStaff" method="post" novalidate>
                      

                        <div class="mb-3">
                            <label class="form-label">Personel Adı Soyadı</label>
                            <input asp-for="StaffFullName" class="form-control" placeholder="Örn. Ahmet Yılmaz" required />
                            <span class="text-danger" asp-validation-for="StaffFullName"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Unvan / Görev</label>
                            <input asp-for="StaffTitle" class="form-control" placeholder="Örn. Satış Müdürü" required />
                            <span class="text-danger" asp-validation-for="StaffTitle"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Profil Resmi URL</label>
                            <input asp-for="StaffImageURL" id="staffImageUrl" class="form-control" placeholder="https://..." />
                            <span class="text-danger" asp-validation-for="StaffImageURL"></span>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Facebook</label>
                                <input asp-for="StaffFacebook" class="form-control" placeholder="https://facebook.com/..." />
                                <span class="text-danger" asp-validation-for="StaffFacebook"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">LinkedIn</label>
                                <input asp-for="StaffLinkedin" class="form-control" placeholder="https://linkedin.com/..." />
                                <span class="text-danger" asp-validation-for="StaffLinkedin"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">X / Twitter</label>
                                <input asp-for="StaffX" class="form-control" placeholder="https://x.com/..." />
                                <span class="text-danger" asp-validation-for="StaffX"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Instagram</label>
                                <input asp-for="StaffInstagram" class="form-control" placeholder="https://instagram.com/..." />
                                <span class="text-danger" asp-validation-for="StaffInstagram"></span>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a href="/AdminStaff/Index/" class="btn btn-light">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Resim Önizleme -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <strong>Profil Resmi Önizleme</strong>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <div class="rounded-circle overflow-hidden border bg-light" style="width:120px;height:120px;">
                        <img id="staffImagePreview" src="" alt="Personel Resmi" style="width:100%;height:100%;object-fit:cover;display:none;" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const urlInput = document.getElementById('staffImageUrl');
            const img = document.getElementById('staffImagePreview');
            if(!urlInput) return;

            function update(){
                const v = (urlInput.value || '').trim();
                if(!v){ img.style.display='none'; img.removeAttribute('src'); return; }
                img.src = v;
                img.onload = () => { img.style.display='block'; };
                img.onerror = () => { img.style.display='none'; };
            }
            urlInput.addEventListener('input', update);
            update();
        })();
    </script>
}


