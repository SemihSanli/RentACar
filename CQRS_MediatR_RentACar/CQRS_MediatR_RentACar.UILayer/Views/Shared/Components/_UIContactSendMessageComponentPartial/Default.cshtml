@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="col-xl-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="bg-secondary p-5 rounded">
        <h4 class="text-primary mb-4">Send Your Message</h4>

        <form asp-controller="UISendMessage" asp-action="SendMessage" method="post">

            <div class="row g-4">
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="name" name="SenderName" placeholder="Your Name" required>
                        <label for="name">Your Name</label>
                    </div>
                </div>

                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="surname" name="SenderSurname" placeholder="Your Surname" required>
                        <label for="surname">Your Surname</label>
                    </div>
                </div>

                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="tel" class="form-control" id="phone" name="SenderPhone" placeholder="Phone" required>
                        <label for="phone">Your Phone</label>
                    </div>
                </div>

                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="subject" name="SenderSubject" placeholder="Subject">
                        <label for="subject">Subject</label>
                    </div>
                </div>
                <div class="col-lg-12 col-xl-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="email" name="SenderEmail" placeholder="Email">
                        <label for="email">Email</label>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" id="message" name="SenderMessage" placeholder="Leave a message here" style="height: 160px" required></textarea>
                        <label for="message">Message</label>
                    </div>
                </div>
             

                <div class="col-12">
                    <button type="submit" class="btn btn-light w-100 py-3">Mesaj Gönder</button>
                </div>
            </div>
        </form>
    </div>
</div>


@using System.Text.Json
@{
    var ok = TempData["ContactSuccess"] as string; // "Mesajınız alındı."
}
@if (!string.IsNullOrWhiteSpace(ok))
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const msg = @Html.Raw(JsonSerializer.Serialize(ok)); // güvenli JS string
        Swal.fire({
            icon: 'success',
            title: 'Başarılı',
            text: msg,
            confirmButtonText: 'Tamam'
        });
    </script>
}