@model List<GetFeatureQueryResult>
<div class="container-fluid feature py-5">
    <div class="container py-5">

        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3"> <span class="text-primary">Öne Çıkanlar</span></h1>
            <p class="mb-0">
                Şehir içi veya şehirler arası yolculuklarınızda güvenli, hızlı ve konforlu araçlarımızla hayalinizdeki seyahati yaşayın
            </p>
        </div>

        <div class="row g-4 align-items-center">

            <div class="col-xl-4">
                <div class="row gy-4 gx-0">
                    @foreach (var item in Model.Take(2))
                    {
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="feature-item d-flex align-items-start">
                                <div class="feature-icon flex-shrink-0">
                                    <span class="@item.FeatureIconURL"></span>
                                </div>
                                <div class="ms-4">
                                    <h5 class="mb-3">@item.FeatureLayerTitle</h5>
                                    <p class="mb-0">@item.FeatureLayerDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-12 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                <img src="https://file.aiquickdraw.com/imgcompressed/img/compressed_1a256351f713dc691b44d53d74472491.webp" class="img-fluid w-100" style="object-fit: cover;" alt="Img">
            </div>

            <div class="col-xl-4">
                <div class="row gy-4 gx-0">
                    @foreach (var item in Model.Skip(2).Take(2))
                    {
                        <div class="col-12 wow fadeInUp" data-wow-delay="0.3s">
                            <div class="feature-item d-flex align-items-start">
                                <div class="feature-icon flex-shrink-0">
                                    <span class="@item.FeatureIconURL"></span>
                                </div>
                                <div class="ms-4">
                                    <h5 class="mb-3">@item.FeatureLayerTitle</h5>
                                    <p class="mb-0">@item.FeatureLayerDescription</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

        </div>

    </div>
</div>