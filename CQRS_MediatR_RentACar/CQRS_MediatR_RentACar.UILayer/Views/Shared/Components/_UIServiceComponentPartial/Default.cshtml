@model List<GetServiceQueryResult>
<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3"> <span class="text-primary">Hizmetlerimiz</span></h1>
            <p class="mb-0">
                Araç kiralama deneyiminizi kolaylaştırmak için sunduğumuz hizmetleri keşfedin.
                Geniş araç filomuz, uygun fiyatlarımız ve 7/24 müşteri desteğimizle her yolculuğunuzda yanınızdayız.
            </p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">

                    <div class="service-item p-4">

                        <div class="service-icon mb-4">
                            <i class="@item.ServiceIconURL"></i>
                        </div>
                        <h5 class="mb-3">@item.ServiceArticleTitle</h5>
                        <p class="mb-0">@item.ServiceArticleDescription</p>

                    </div>

                </div>
            }
        </div>
    </div>
</div>