@model List<GetSliderQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid px-4 py-3">
	<div class="d-flex justify-content-between align-items-center mb-3">
		<h1 class="h5 mb-0">Sliderlar (@(Model?.Count ?? 0))</h1>
		<a class="btn btn-primary" href="/AdminSlider/AddSlider">
			<i class="fas fa-plus me-2"></i>Yeni Ekle
		</a>
	</div>

	@if (Model == null || !Model.Any())
	{
		<div class="alert alert-info mb-0">Kayıt bulunamadı.</div>
	}
	else
	{
		<div class="card shadow-sm">
			<div class="card-body">
				<div class="table-responsive">
					<table id="slidersTable" class="table table-hover align-middle w-100">
						<thead class="table-light">
							<tr>
								<th style="width:90px;">ID</th>
								<th>Başlık</th>
								<th>Alt Başlık</th>
								<th style="width:200px;">İşlemler</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var s in Model)
							{
								<tr>
									<td>@s.SliderID</td>
									<td>@s.SliderTitle</td>
									<td>
										<div class="clamp-2" title="@s.SliderSubTitle">@s.SliderSubTitle</div>
									</td>
									<td>
										<div class="btn-group btn-group-sm" role="group">
											<a class="btn btn-outline-primary" href="/AdminSlider/UpdateSlider/@s.SliderID">
												<i class="fas fa-edit me-1"></i>Güncelle
											</a>
											<a class="btn btn-outline-danger"
											   href="/AdminSlider/DeleteSlider/@s.SliderID"
											   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?');">
												<i class="fas fa-trash me-1"></i>Sil
											</a>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
				<small class="text-muted">Arama ve sıralama için kolon başlıklarını ve üstteki kutuyu kullanabilirsiniz.</small>
			</div>
		</div>
	}
</div>

<style>
	.clamp-2{
		display:-webkit-box;
		-webkit-line-clamp:2;
		-webkit-box-orient:vertical;
		overflow:hidden;
	}
</style>

@section Scripts{
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css" />
	<script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
	<script>
				$(function () {
			$('#slidersTable').DataTable({
				pageLength: 25,
				lengthMenu: [10,25,50,100],
				order: [[1,'asc']],
				language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json' },
				columnDefs: [
					{ targets: [0], width: 90 },
					{ targets: [3], orderable: false, searchable: false, width: 200 }
				],
				info: false  // <--- Bu satır info alanını kapatır
			});
		});

	</script>
}

